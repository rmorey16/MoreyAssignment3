@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<MoreyAssignment3.Models.EntryResponse>

<div>
    <h2>Here are the current movies and all their information</h2>

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (MoreyAssignment3.Models.EntryResponse x in Model)
            {
                @if (x.Title == "Independence Day")
                {
                    continue;
                }
                 
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
            }
        </tbody>
    </table>
</div>

